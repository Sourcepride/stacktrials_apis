{
  "name": "Existing Docker Compose (Extend)",
  "dockerComposeFile": ["../docker-compose.yml", "docker-compose.yml"],
  "service": "api",
  "workspaceFolder": "/app",

  // FIX 1: Add this 'features' block. 
  // It installs sudo and automatically fixes permission issues for the 'www' user.
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installSudo": true,
      "username": "www",
      "upgradePackages": false
    }
  },

  // FIX 2: We still update UID, but now the feature above ensures the tools exist to do it.
  "updateRemoteUserUID": true,

  // FIX 3: Updated Command. 
  // We removed the manual 'chown' because the feature above handles it automatically.
  // We use 'pip install --user' to ensure packages go to /home/www/.local/ 
  // instead of trying to write to the protected /usr/local/bin folder.
  "postCreateCommand": "pip install --user -r requirements.txt && chmod 700 ~/.ssh",

  "forwardPorts": [8082, 5432, 6379, 15672],
  "portsAttributes": {
    "8082": {
      "label": "FastAPI API",
      "onAutoForward": "notify"
    },
    "15672": {
      "label": "RabbitMQ Management"
    }
  },

  "shutdownAction": "stopCompose",

  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.analysis.typeCheckingMode": "basic",
        "python.languageServer": "Pylance",
        "editor.formatOnSave": true,
        "python.formatting.provider": "black",
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "ms-python.black-formatter",
        "humao.rest-client",
        "ms-python.isort",
        "ms-python.flake8"
      ]
    }
  },

  "remoteUser": "www",
  "userEnvProbe": "loginInteractiveShell",

  "mounts": [
    "source=${localEnv:HOME}/.gitconfig,target=/home/www/.gitconfig,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.ssh,target=/home/www/.ssh,type=bind,consistency=cached"
  ],
  "remoteEnv": {
    "GIT_SSH_COMMAND": "ssh -i /home/www/.ssh/id_rsa -o StrictHostKeyChecking=no"
  }
}