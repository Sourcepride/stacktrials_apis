{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "json": {
            "class": "pythonjsonlogger.jsonlogger.JsonFormatter",
            "format": "%(asctime)s %(levelname)s %(name)s %(message)s %(pathname)s %(lineno)d"
        },
        "simple": {
            "format": "%(asctime)s - %(levelname)s - %(name)s - %(message)s"
        }
    },
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "formatter": "json",
            "stream": "ext://sys.stdout",
            "level": "${LOG_LEVEL:INFO}"
        },
        "mail": {
            "class": "logging.handlers.SMTPHandler",
            "mailhost": [
                "${SMTP_HOST}",
                "${SMTP_PORT}"
            ],
            "fromaddr": "${SMTP_USER}",
            "toaddrs": [
                "${ADMIN_EMAIL}"
            ],
            "subject": "StackTrails Error Log",
            "credentials": [
                "${SMTP_USER}",
                "${SMTP_PASS}"
            ],
            "secure": [],
            "formatter": "simple",
            "level": "ERROR"
        }
    },
    "loggers": {
        "app": {
            "level": "${LOG_LEVEL:INFO}",
            "handlers": [
                "console",
                "mail"
            ],
            "propagate": false
        },
        "uvicorn.error": {
            "level": "${LOG_LEVEL:INFO}",
            "handlers": [
                "console"
            ],
            "propagate": false
        },
        "uvicorn.access": {
            "level": "${LOG_LEVEL:INFO}",
            "handlers": [
                "console"
            ],
            "propagate": false
        },
        "fastapi": {
            "level": "${LOG_LEVEL:INFO}",
            "handlers": [
                "console"
            ],
            "propagate": false
        }
    },
    "root": {
        "level": "${LOG_LEVEL:INFO}",
        "handlers": [
            "console"
        ]
    }
}